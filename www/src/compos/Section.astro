---
export interface Props {
  id?: string;
  align?: string;
  classx?: string;
}
---

<section id={Astro.props.id} class:list={["mx-auto max-w-screen-lg", Astro.props.classx]}>
  {
    Astro.slots.has("title") && (
      <div
        class:list={["mt-16", Astro.props.align === "center" && "text-center"]}
      >
        <h1 class="text-2xl md:text-4xl lg:text-5xl font-bold lg:tracking-tight">
          <slot name="title">Title</slot>
        </h1>

        {Astro.slots.has("desc") && (
          <p class="text-sm md:text-md lg:text-lg mt-4">
            <slot name="desc">Some description goes here</slot>
          </p>
        )}
      </div>
    )
  }

  <slot />
</section>
