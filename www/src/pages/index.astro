---
import Page from "@layouts/Page.astro";

import { SITE, LINKS, COLORS } from "@config";

import { Image } from "astro:assets";

import Link from "@compos/core/Link.astro";
import Logo from "@compos/Logo.astro";
import BentoBox from "@compos/BentoBox.astro";
// import TwoColsFeatures from "@compos/TwoColsFeatures.astro";

import xquaText from "@assets/xqua-text.svg";
import xquaBackground from "@assets/background.svg";
import xquaSpaces from "@assets/xqua-spaces.svg";
import xquaEcosystem from "@assets/xqua-ecosystem.svg";
import xquaIconsAuth from "@assets/icons/auth.svg";
import xquaIconsDash from "@assets/icons/dashboard.svg";
import xquaIconsSecurity from "@assets/icons/security.svg";
import xquaIconsStorage from "@assets/icons/storage.svg";
import xquaIconsConnectedSpaces from "@assets/icons/connected-spaces.svg";
import xquaIconsEmbeddedSpaces from "@assets/icons/embedded-spaces.svg";
---

<Page
  title={`${SITE.name}: An Open Framework to Build, Scale & Operate Platforms`}
>
  <!-- hero section -->
  <main id="hero" class="relative px-6 lg:px-8 text-white">
    <!-- bg-gradients -->
    <div
      class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80"
    >
      <svg
        class="relative left-[calc(50%-11rem)] -z-10 h-[21.1875rem] max-w-none -translate-x-1/2 rotate-[30deg] sm:left-[calc(50%-30rem)] sm:h-[42.375rem]"
        viewBox="0 0 1155 678"
      >
        <path
          fill="url(#45de2b6b-92d5-4d68-a6a0-9b9b2abad533)"
          fill-opacity=".3"
          d="M317.219 518.975L203.852 678 0 438.341l317.219 80.634 204.172-286.402c1.307 132.337 45.083 346.658 209.733 145.248C936.936 126.058 882.053-94.234 1031.02 41.331c119.18 108.451 130.68 295.337 121.53 375.223L855 299l21.173 362.054-558.954-142.079z"
        ></path>
        <defs>
          <linearGradient
            id="45de2b6b-92d5-4d68-a6a0-9b9b2abad533"
            x1="1155.49"
            x2="-78.208"
            y1=".177"
            y2="474.645"
            gradientUnits="userSpaceOnUse"
          >
            <stop stop-color={COLORS.c}></stop>
            <stop offset="1" stop-color={COLORS.b}></stop>
          </linearGradient>
        </defs>
      </svg>
    </div>

    <!-- content -->
    <div class="m-auto max-w-2xl pt-12 sm:pt-24">
      <div class="mb-8 flex justify-center">
        <Link
          noeffects={true}
          href={LINKS.roadmap}
          class="inline-flex justify-between items-center py-2 px-2 pr-4 text-sm bg-slate-950/75 rounded-full text-white ring-1 ring-transparent hover:ring-slate-300"
        >
          <span
            class="animate-pulse text-[8px] sm:text-sm font-semibold bg-purple-600 rounded-full px-4 py-1.5 mr-3"
          >
            Brewing Now
          </span>

          <span class="text-[8px] sm:text-sm font-medium">
            Checkout the Project Roadmap Here
          </span>
          <svg
            class="ml-2 w-5 h-5"
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
            ><path
              fill-rule="evenodd"
              d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
              clip-rule="evenodd"></path></svg
          >
        </Link>
      </div>
      <div class="text-center">
        <span class="flex flex-col justify-center items-center tracking-tight">
          <Image
            loading="eager"
            src={xquaText}
            alt="xqua-text"
            class="w-8/12 lg:w-3/4"
          />

          <span class="mt-6 text-xl sm:text-4xl font-light">
            The Framework for Platform Building
          </span>
        </span>
        <p class="mt-6 text-sm md:text-lg leading-8 text-gray-300">
          leverage the full potential of <span class="text-cyan-300"
            >platform approach</span
          > for your projects, teams, startup or whole organization by building reliable
          platforms that can <span class="text-cyan-300">scale globally</span>
        </p>
      </div>
    </div>
  </main>

  <!-- components section -->
  <section id="components" class="relative px-6 lg:px-8 text-white">
    <!-- bg-gradients -->
    <div
      class="absolute inset-x-0 top-[calc(100%-13rem)] -z-10 transform-gpu overflow-hidden blur-3xl sm:top-[calc(100%-30rem)]"
    >
      <svg
        class="relative left-[calc(50%+3rem)] h-[21.1875rem] max-w-none -translate-x-1/2 sm:left-[calc(50%+36rem)] sm:h-[42.375rem]"
        viewBox="0 0 1155 678"
      >
        <path
          fill="url(#ecb5b0c9-546c-4772-8c71-4d3f06d544bc)"
          fill-opacity=".3"
          d="M317.219 518.975L203.852 678 0 438.341l317.219 80.634 204.172-286.402c1.307 132.337 45.083 346.658 209.733 145.248C936.936 126.058 882.053-94.234 1031.02 41.331c119.18 108.451 130.68 295.337 121.53 375.223L855 299l21.173 362.054-558.954-142.079z"
        ></path>
        <defs>
          <linearGradient
            id="ecb5b0c9-546c-4772-8c71-4d3f06d544bc"
            x1="1155.49"
            x2="-78.208"
            y1=".177"
            y2="474.645"
            gradientUnits="userSpaceOnUse"
          >
            <stop stop-color={COLORS.b}></stop>
            <stop offset="1" stop-color={COLORS.a}></stop>
          </linearGradient>
        </defs>
      </svg>
    </div>

    <!-- content -->
    <div class="m-auto max-w-6xl py-24">
      <div class="relative grid gap-3 grid-cols-6">
        <BentoBox
          boxClass="col-span-full lg:col-span-2"
          class="p-0"
          style={`background-image: url(${xquaBackground.src}); background-position: center; -webkit-background-size: cover; -moz-background-size: cover; -o-background-size: cover; background-size: cover;`}
        >
          <div class="w-full h-full flex-cij">
            <Logo hidetext={true} class="mr-0 h-3/5 w-3/5" />

            <h2 class="mt-6 text-center font-semibold text-white text-3xl">
              Powerful Platform Engine & CLI
            </h2>
          </div>
        </BentoBox>

        <BentoBox boxClass="col-span-full sm:col-span-3 lg:col-span-2">
          <div class="w-full h-full flex-cij">
            <div
              class="h-3/4 w-full rounded-3xl bg-teal-700/30 hover:bg-teal-700/25 flex-rij"
            >
              <Image
                loading="eager"
                src={xquaIconsAuth}
                alt="xqua-icons-auth"
                class="w-10 h-10 m-2"
              />
              <Image
                loading="eager"
                src={xquaIconsDash}
                alt="xqua-icons-dash"
                class="w-10 h-10 m-2"
              />
              <Image
                loading="eager"
                src={xquaIconsSecurity}
                alt="xqua-icons-security"
                class="w-10 h-10 m-2"
              />
              <Image
                loading="eager"
                src={xquaIconsStorage}
                alt="xqua-icons-storage"
                class="w-10 h-10 m-2"
              />
            </div>

            <div class="mt-6 text-center relative">
              <h2
                class="text-lg font-medium transition group-hover:text-purple-950 text-white"
              >
                Say Hello to Spaces
              </h2>
              <p class="text-gray-300">
                Add features, technologies, and integrations on the fly with our
                strategy-agnostic dev pattern anytime!
              </p>
            </div>
          </div>
        </BentoBox>

        <BentoBox
          boxClass="col-span-full sm:col-span-3 lg:col-span-2"
          class="p-0 bg-black"
        >
          <Image
            loading="eager"
            src={xquaEcosystem}
            alt="xqua-spaces"
            class="w-full h-full rounded-2xl"
          />
        </BentoBox>

        <BentoBox
          boxClass="col-span-full lg:col-span-3"
          class="p-0"
          style={`background-image: url(${xquaBackground.src}); background-position: center;  -webkit-background-size: cover; -moz-background-size: cover; -o-background-size: cover; background-size: cover;`}
        >
          <div class="w-full h-full flex-ci justify-between">
            <h2
              class="m-4 text-center font-normal text-white text-lg sm:text-xl"
            >
              Infinite Freedom With <span class="font-semibold">Spaces</span>
            </h2>

            <div
              class="h-4/5 w-full rounded-3xl bg-teal-700/30 hover:bg-teal-700/25 flex-ci justify-around sm:flex-row"
            >
              <Image
                loading="eager"
                src={xquaIconsConnectedSpaces}
                alt="xqua-icons-connected-spaces"
                class="w-48 mx-4 mt-4 mb-2 sm:mb-4"
              />
              <Image
                loading="eager"
                src={xquaIconsEmbeddedSpaces}
                alt="xqua-icons-embedded-spaces"
                class="w-24 mx-4 mb-4 mt-2 sm:mt-4"
              />
            </div>
          </div>
        </BentoBox>

        <BentoBox
          boxClass="col-span-full lg:col-span-3"
          class="p-0"
          style={`background-image: url(${xquaBackground.src}); background-position: center; -webkit-background-size: cover; -moz-background-size: cover; -o-background-size: cover; background-size: cover;`}
        >
          <Image
            loading="eager"
            src={xquaSpaces}
            alt="xqua-spaces"
            class="w-full h-full rounded-2xl"
          />
        </BentoBox>
      </div>
    </div>
  </section>

  <!-- <TwoColsFeatures /> -->
</Page>
