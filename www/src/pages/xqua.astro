---
import Base from "@layouts/Base.astro";

import { SITE, LINKS, COLORS } from "@config";

import Link from "@compos/core/Link.astro";

import Header from "@compos/Header.astro";
import Footer from "@compos/Footer.astro";

const metaData = {
  title: `${SITE.name} XQUA: GitHub for Systems Design`,
  description:
    "Changing the way how you design, test and collaborate to build reliable systems and applications.",
};
---

<Base {...metaData}>
  <!-- header -->
  <!--Header 2 -->
  <Header
    title="XQUA"
    path={LINKS.products.xqua.path}
    navlinks={[
      {
        title: "Features",
        path: "#features",
      },
      {
        title: "Pricing",
        path: "#pricing",
      },
      {
        title: "Roadmap",
        path: "#roadmap",
      },
      {
        title: "Changelog",
        path: LINKS.products.xqua.changelog,
      },
    ]}
  >
    <Link
      slot="cta"
      noeffects={true}
      href={LINKS.products.xqua.app}
      class="btn bg-cyan-600 hover:bg-cyan-700 py-2 px-3 inline-flex justify-center items-center text-center"
    >
      Get Started
      <svg
        class="ml-2 -mr-1 w-5 h-5"
        fill="currentColor"
        viewBox="0 0 20 20"
        xmlns="http://www.w3.org/2000/svg"
        ><path
          fill-rule="evenodd"
          d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
          clip-rule="evenodd"></path></svg
      >
    </Link>
  </Header>

  <!-- hero section -->
  <main id="hero" class="relative px-6 lg:px-8 text-white">
    <!-- bg-gradients -->
    <div
      class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80"
    >
      <svg
        class="relative left-[calc(50%-11rem)] -z-10 h-[21.1875rem] max-w-none -translate-x-1/2 rotate-[30deg] sm:left-[calc(50%-30rem)] sm:h-[42.375rem]"
        viewBox="0 0 1155 678"
      >
        <path
          fill="url(#45de2b6b-92d5-4d68-a6a0-9b9b2abad533)"
          fill-opacity=".3"
          d="M317.219 518.975L203.852 678 0 438.341l317.219 80.634 204.172-286.402c1.307 132.337 45.083 346.658 209.733 145.248C936.936 126.058 882.053-94.234 1031.02 41.331c119.18 108.451 130.68 295.337 121.53 375.223L855 299l21.173 362.054-558.954-142.079z"
        ></path>
        <defs>
          <linearGradient
            id="45de2b6b-92d5-4d68-a6a0-9b9b2abad533"
            x1="1155.49"
            x2="-78.208"
            y1=".177"
            y2="474.645"
            gradientUnits="userSpaceOnUse"
          >
            <stop stop-color={COLORS.c}></stop>
            <stop offset="1" stop-color={COLORS.b}></stop>
          </linearGradient>
        </defs>
      </svg>
    </div>
    <div
      class="absolute inset-x-0 top-[calc(100%-13rem)] -z-10 transform-gpu overflow-hidden blur-3xl sm:top-[calc(100%-30rem)]"
    >
      <svg
        class="relative left-[calc(50%+3rem)] h-[21.1875rem] max-w-none -translate-x-1/2 sm:left-[calc(50%+36rem)] sm:h-[42.375rem]"
        viewBox="0 0 1155 678"
      >
        <path
          fill="url(#ecb5b0c9-546c-4772-8c71-4d3f06d544bc)"
          fill-opacity=".3"
          d="M317.219 518.975L203.852 678 0 438.341l317.219 80.634 204.172-286.402c1.307 132.337 45.083 346.658 209.733 145.248C936.936 126.058 882.053-94.234 1031.02 41.331c119.18 108.451 130.68 295.337 121.53 375.223L855 299l21.173 362.054-558.954-142.079z"
        ></path>
        <defs>
          <linearGradient
            id="ecb5b0c9-546c-4772-8c71-4d3f06d544bc"
            x1="1155.49"
            x2="-78.208"
            y1=".177"
            y2="474.645"
            gradientUnits="userSpaceOnUse"
          >
            <stop stop-color={COLORS.b}></stop>
            <stop offset="1" stop-color={COLORS.a}></stop>
          </linearGradient>
        </defs>
      </svg>
    </div>

    <!-- content -->
    <div
      class="grid max-w-screen-xl px-4 py-8 mx-auto lg:gap-8 xl:gap-0 lg:py-16 lg:grid-cols-12"
    >
      <div class="mr-auto place-self-center lg:col-span-7">
        <h1
          class="max-w-2xl mb-4 text-4xl font-extrabold tracking-tight leading-none md:text-5xl xl:text-6xl"
        >
          GitHub for Systems Design
        </h1>
        <p
          class="max-w-2xl mb-6 font-light text-gray-300 lg:mb-8 md:text-lg lg:text-xl"
        >
          Changing the way how you design, test and collaborate to build
          reliable systems and applications.
        </p>

        <div class="mt-10 flex items-center justify-start gap-x-6">
          <Link
            noeffects={true}
            href={LINKS.products.xqua.app}
            class="btn bg-cyan-600 hover:bg-cyan-700 py-3 px-5 inline-flex justify-center items-center text-center"
          >
            Get Started
            <svg
              class="ml-2 -mr-1 w-5 h-5"
              fill="currentColor"
              viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg"
              ><path
                fill-rule="evenodd"
                d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                clip-rule="evenodd"></path></svg
            >
          </Link>
          <Link
            noeffects={true}
            href="#"
            class="btn bg-slate-950/75 hover:bg-slate-950 ring-2 ring-cyan-600 hover:ring-cyan-700 py-3 px-5 inline-flex justify-center items-center text-center"
          >
            Speak to Sales
          </Link>
        </div>
      </div>
      <div class="hidden lg:mt-0 lg:col-span-5 lg:flex">
        <img
          src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/hero/phone-mockup.png"
          alt="mockup"
        />
      </div>
    </div>
  </main>

  <!-- footer -->
  <Footer
    home={LINKS.home}
    tos={LINKS.legal.tos}
    privacyPolicy={LINKS.legal.privacyPolicy}
    navlinks={[
      {
        title: "Products",
        children: [
          {
            title: "XQUA",
            path: LINKS.products.xqua.path,
          },
        ],
      },
      {
        title: "Resources",
        children: [
          {
            title: "Blog",
            path: LINKS.resources.blog,
          },
          {
            title: "Docs",
            path: LINKS.resources.docs.path,
          },
        ],
      },
      {
        title: "Company",
        children: [
          {
            title: "Home",
            path: LINKS.home,
          },
          {
            title: "About Us",
            path: LINKS.about,
          },
          {
            title: "Careers",
            path: LINKS.careers,
          },
          {
            title: "Legal",
            path: LINKS.legal.path,
          }, exist on type '{ home: string; roadmap
        ],
      },
    ]}
  />
</Base>
